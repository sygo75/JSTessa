{
  "$jason": {
    "head": {
      "title": "JS Tessa",
      "styles": {
        "bold": {
          "font": "HelveticaNeue-CondensedBold",
          "padding": "10",
          "size": "15"
        },
        "normal": {
          "font": "HelveticaNeue",
          "size": "12"
        }
      },
      "actions": {
        "$load": {
          "type": "$render"
        },
        "$foreground": {
          "type": "$reload"
        }
      }
    },
    "body": {
      "header": {
        "title": "JS Tessa",
        "menu": {
          "text": "View JSON",
          "href": {
            "url": "https://sygo75.github.io/JSTessa/jstessa.json",
            "view": "web"
          }
        },
        "style": {
          "font": "AvenirNext-Heavy",
          "size": "18"
        },
        "_comment_search": {
          "name": "query",
          "placeholder": "Enter keyword",
          "action": {
            "type": "$util.banner",
            "options": {
              "title": "{{$get.query}}",
              "description": "The content inside the search input is {{$get.query}}"
            }
          }
        }
      },
      "sections": [{
          "items": [
            {
              "type": "label",
              "text": "Contact"
            },
            {
              "type": "label",
              "text": "Date"
            },
            {
              "type": "label",
              "text": "Référence"
            }]
      }],
      "footer": {

      }
    }
  }
}
